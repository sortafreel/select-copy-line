{
  "name": "select-copy-line",
  "displayName": "Select Copy Line",
  "description": "Copy selected code with relative path and line numbers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "select-copy-line.copyWithPath",
        "title": "Copy Selection with Path"
      }
    ],
    "keybindings": [
      {
        "command": "select-copy-line.copyWithPath",
        "key": "cmd+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.32.0",
    "typescript": "^4.9.3"
  }
}
